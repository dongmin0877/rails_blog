<h1>Article List</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Text</<th>
        <th></th>
    </tr>

    
    <% @articles.each do |article| %>
        <tr>
            <th><%= article.title %></th>
            <td><%= article.text %></td>
            <td><%= link_to 'show', article_path(article) %></td>
            <td><%= link_to 'edit', edit_article_path(article) %></td>
            <td><%= link_to 'delete',
              article_path(article),
              method: :delete,
              data: { confirm: "Are you sure?" } %></td>
        </tr>
    <% end %>
</table>


<p><%= link_to 'new', new_article_path() %></p>
<p><%= link_to 'home', welcome_index_path() %></p>


